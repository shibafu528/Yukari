<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="ColorsTheme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="VertAnimationTheme" parent="ColorsTheme.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/Animation.Vert</item>
    </style>
    <style name="VertAnimationTheme.Dark" parent="ColorsTheme.Dark.Dialog">
        <item name="android:windowAnimationStyle">@style/Animation.Vert</item>
    </style>
    <style name="Animation" parent="android:Animation" />
    <style name="Animation.Vert" parent="android:Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_tweet_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_tweet_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_tweet_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_tweet_close_exit</item>
    </style>

    <style name="AppThemeTranslucent" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:colorPrimary">@color/key_color</item>
        <item name="android:colorPrimaryDark">@color/key_color_2</item>
        <item name="android:colorAccent">@color/key_color_accent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="tweetTextColor">#000</item>
        <item name="tweetPressColor">@color/bg_press</item>
        <item name="tweetFocusColor">@color/bg_press</item>
        <item name="tweetNormal">@android:color/transparent</item>
        <item name="tweetRetweet">@drawable/bg_retweet</item>
        <item name="tweetOwn">@drawable/bg_own</item>
        <item name="tweetMention">@drawable/bg_mention</item>
    </style>

    <style name="AppThemeTranslucent.Dark" parent="android:Theme.Material.NoActionBar">
        <item name="android:colorPrimary">@color/key_color</item>
        <item name="android:colorPrimaryDark">@color/key_color_2</item>
        <item name="android:colorAccent">@color/key_color_accent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="tweetTextColor">#000</item>
        <item name="tweetPressColor">@color/bg_press</item>
        <item name="tweetFocusColor">@color/bg_press</item>
        <item name="tweetNormal">@android:color/transparent</item>
        <item name="tweetRetweet">@drawable/bg_retweet</item>
        <item name="tweetOwn">@drawable/bg_own</item>
        <item name="tweetMention">@drawable/bg_mention</item>
    </style>

    <style name="AppDialogThemeWhenLarge" parent="ColorsTheme.Light"/>
    <style name="AppDialogThemeWhenLarge.Dark" parent="ColorsTheme.Dark"/>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="YukariSearchTheme" parent="ColorsTheme.Light">
        <!--<item name="actionBarWidgetTheme">@style/YukariDarkTheme</item>-->
    </style>

    <style name="YukariAboutTheme" parent="ColorsTheme.Light">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Yukari.TextAppearance.TabTitle" parent="TextAppearance.AppCompat.Medium.Inverse">
        <item name="android:textColor">#ccc</item>
    </style>
</resources>
