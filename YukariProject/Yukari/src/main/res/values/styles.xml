<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="YukariLightTheme">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="VertAnimationTheme" parent="YukariLightDialogTheme">
        <item name="android:windowAnimationStyle">@style/Animation.Vert</item>
    </style>
    <style name="VertAnimationTheme.Dark" parent="YukariDarkDialogTheme">
        <item name="android:windowAnimationStyle">@style/Animation.Vert</item>
    </style>
    <style name="Animation" parent="android:Animation" />
    <style name="Animation.Vert" parent="android:Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_tweet_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_tweet_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_tweet_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_tweet_close_exit</item>
    </style>

    <style name="AppThemeTranslucent" parent="android:Theme.Light.NoTitleBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppThemeTranslucentBg" parent="android:Theme.Light.NoTitleBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@drawable/preview_bg</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarTranslucentBGTheme</item>
        <item name="tweetTextColor">#000</item>
    </style>

    <style name="AppDialogThemeWhenLarge" parent="YukariLightTheme"/>
    <style name="AppDialogThemeWhenLarge.Dark" parent="YukariDarkTheme"/>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="YukariSearchTheme" parent="YukariLightTheme">
        <item name="actionBarWidgetTheme">@style/YukariDarkTheme</item>
    </style>

    <style name="YukariAboutTheme" parent="YukariLightTheme"/>
</resources>
