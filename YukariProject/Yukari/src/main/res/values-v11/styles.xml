<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="YukariTheme">
        <!-- API 11 theme customizations can go here. -->
    </style>

    <style name="VertAnimationTheme" parent="YukariDialogTheme">
        <item name="android:windowAnimationStyle">@style/Animation.Vert</item>
    </style>
    <style name="Animation" parent="android:Animation" />
    <style name="Animation.Vert" parent="android:Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_tweet_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_tweet_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_tweet_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_tweet_close_exit</item>
    </style>

    <style name="AppThemeNoTitle" parent="YukariTheme">
        <item name="android:actionBarStyle">@style/TransparentActionBarYukariTheme</item>
        <item name="ptrHeaderStyle">@style/Widget.Custom.PtrHeader</item>
    </style>

    <style name="AppThemeTranslucent" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppThemeTranslucentBg" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@drawable/preview_bg</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarTranslucentBGTheme</item>
    </style>

</resources>
