<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/pager">
    </android.support.v4.view.ViewPager>

    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/mainfooter_height"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/tweetgesture"
            android:background="@drawable/status_bar_color">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="▶"
                    android:id="@+id/tvStreamStates"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/tvMainTab"
                    android:scrollHorizontally="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="6dp"
                    android:focusable="true"
                    android:clickable="true"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:background="@drawable/selector_key_background" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5" />

                <ImageButton
                    android:layout_width="@dimen/mainfooter_button_width"
                    android:layout_height="match_parent"
                    android:id="@+id/ibStream"
                    android:src="@drawable/ic_play"
                    android:layout_weight="2"
                    android:focusable="false"
                    android:visibility="invisible"
                    android:background="@drawable/selector_key_background"/>

                <ImageButton
                    android:layout_width="@dimen/mainfooter_button_width"
                    android:layout_height="match_parent"
                    android:id="@+id/ibClose"
                    android:src="@drawable/ic_close"
                    android:layout_weight="2"
                    android:focusable="false"
                    android:visibility="invisible"
                    android:background="@drawable/selector_key_background"/>

                <ImageButton
                    android:layout_width="@dimen/mainfooter_button_width"
                    android:layout_height="match_parent"
                    android:id="@+id/ibSearch"
                    android:src="@drawable/ic_search"
                    android:layout_weight="2"
                    android:focusable="false"
                    android:background="@drawable/selector_key_background"/>

                <ImageButton
                    android:layout_width="@dimen/mainfooter_button_width"
                    android:layout_height="match_parent"
                    android:id="@+id/ibMenu"
                    android:src="@drawable/ic_action_overflow"
                    android:layout_weight="2"
                    android:focusable="false"
                    android:background="@drawable/selector_key_background"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/llQuickTweet"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/tweetgesture"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/key_color"
        android:visibility="gone"
        android:layout_marginRight="@dimen/mainfooter_height">

        <ImageButton
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:id="@+id/ibCloseTweet"
            android:src="@drawable/ic_close"
            android:background="@drawable/selector_key_background"
            android:paddingRight="4dp"/>

        <ImageButton
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:id="@+id/ibAccount"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_key_background"
            android:scaleType="centerInside"
            android:src="@drawable/yukatterload" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/etTweetInput"
            android:layout_weight="1"
            android:paddingLeft="8dp"
            android:textSize="18sp"
            android:singleLine="true"/>

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:id="@+id/ibTweet"
            android:src="@drawable/ic_prof_tweets"
            android:background="@drawable/selector_key_background" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llTweetGuide"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llQuickTweet"
        android:layout_marginTop="162dp"
        android:layout_above="@+id/tweetgesture"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/rect_transbox"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:padding="6dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_prof_tweets" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="紫のバーを上に向かってスライドするとツイート画面が開きます。"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp" />
    </LinearLayout>
</RelativeLayout>