<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"></android.support.v4.view.ViewPager>

    <FrameLayout
        android:id="@+id/tweetgesture"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/mainfooter_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="?attr/footerBarColor">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="@dimen/mainfooter_state_width"
                    android:layout_height="match_parent"
                    android:padding="@dimen/mainfooter_state_padding"
                    android:id="@+id/flStreamState">
                    <shibafu.yukari.common.TriangleView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/streamState" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tvMainTab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/selector_key_background"
                    android:clickable="true"
                    android:ellipsize="end"
                    android:focusable="true"
                    android:maxLines="1"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:scrollHorizontally="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/primary_text_light" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5" />

                <ImageButton
                    android:id="@+id/ibStream"
                    android:layout_width="@dimen/mainfooter_button_width"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/selector_key_background"
                    android:focusable="false"
                    android:src="@drawable/ic_play"
                    android:visibility="invisible" />

                <ImageButton
                    android:id="@+id/ibClose"
                    android:layout_width="@dimen/mainfooter_button_width"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/selector_key_background"
                    android:focusable="false"
                    android:src="@drawable/ic_close"
                    android:visibility="invisible" />

                <ImageButton
                    android:id="@+id/ibSearch"
                    android:layout_width="@dimen/mainfooter_button_width"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/selector_key_background"
                    android:focusable="false"
                    android:src="@drawable/ic_search" />

                <ImageButton
                    android:id="@+id/ibMenu"
                    android:layout_width="@dimen/mainfooter_button_width"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/selector_key_background"
                    android:focusable="false"
                    android:src="@drawable/ic_action_overflow" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/llQuickTweet"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tweetgesture"
        android:layout_marginRight="@dimen/mainfooter_height"
        android:background="?attr/colorPrimary"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/ibCloseTweet"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_key_background"
            android:paddingRight="4dp"
            android:src="@drawable/ic_close" />

        <ImageButton
            android:id="@+id/ibAccount"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_key_background"
            android:scaleType="centerInside"
            android:src="@drawable/yukatterload" />

        <EditText
            android:id="@+id/etTweetInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/ibTweet"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_key_background"
            android:src="@drawable/ic_prof_tweets" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llTweetGuide"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tweetgesture"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/llQuickTweet"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="162dp"
        android:background="@drawable/rect_transbox"
        android:orientation="horizontal"
        android:padding="6dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_prof_tweets" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:text="紫のバーを上に向かってスライドするとツイート画面が開きます。"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="(一度でもツイートするとこの案内は消えます)"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/tweetbutton_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tweetgesture"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/status_bar_color"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ivTweet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tweetgesture"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_key_background"
            android:padding="@dimen/mainfooter_tweet_button"
            android:src="@drawable/ic_prof_tweets" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal|bottom"
            android:src="@color/key_color" />
    </FrameLayout>

</RelativeLayout>