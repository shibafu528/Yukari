<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/status_fragments_margin"
    android:paddingRight="@dimen/status_fragments_margin"
    android:layout_marginBottom="16dp"
    android:minHeight="240dp">

    <TextView
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:text="&lt; Link"
        android:layout_gravity="left|bottom"
        android:background="@drawable/bg_tips"
        android:textColor="#999" />

    <TextView
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:text="Action &gt;"
        android:layout_gravity="right|bottom"
        android:background="@drawable/bg_tips"
        android:textColor="#999"
        android:gravity="right" />

    <ImageButton
        android:id="@+id/ib_state_account"
        android:layout_width="@dimen/status_button_size"
        android:layout_height="@dimen/status_button_size"
        android:scaleType="centerCrop"
        android:padding="10dp"
        android:background="@color/transparent"
        android:src="@drawable/yukatterload"
        android:layout_gravity="center" />

    <ImageButton
        android:id="@+id/ib_state_share"
        android:layout_width="@dimen/status_button_size"
        android:layout_height="@dimen/status_button_size"
        android:scaleType="centerInside"
        android:alpha="0"
        android:background="@drawable/button_status"
        android:src="@drawable/ic_share"
        android:layout_gravity="center" />

    <ImageButton
        android:id="@+id/ib_state_favrt"
        android:layout_width="@dimen/status_button_size"
        android:layout_height="@dimen/status_button_size"
        android:scaleType="centerInside"
        android:alpha="0"
        android:background="@drawable/button_status"
        android:src="@drawable/ic_favrt"
        android:layout_gravity="center" />

    <ImageButton
        android:id="@+id/ib_state_quote"
        android:layout_width="@dimen/status_button_size"
        android:layout_height="@dimen/status_button_size"
        android:scaleType="centerInside"
        android:alpha="0"
        android:background="@drawable/button_status"
        android:src="@drawable/ic_quote"
        android:layout_gravity="center" />

    <ImageButton
        android:id="@+id/ib_state_favorite"
        android:layout_width="@dimen/status_button_size"
        android:layout_height="@dimen/status_button_size"
        android:scaleType="centerInside"
        android:alpha="0"
        android:background="@drawable/button_status"
        android:src="@drawable/ic_favorite"
        android:layout_gravity="center" />

    <ImageButton
        android:id="@+id/ib_state_retweet"
        android:layout_width="@dimen/status_button_size"
        android:layout_height="@dimen/status_button_size"
        android:scaleType="centerInside"
        android:alpha="0"
        android:background="@drawable/button_status"
        android:src="@drawable/ic_retweet"
        android:layout_gravity="center" />

    <ImageButton
        android:id="@+id/ib_state_reply"
        android:layout_width="@dimen/status_button_size"
        android:layout_height="@dimen/status_button_size"
        android:scaleType="centerInside"
        android:alpha="0"
        android:background="@drawable/button_status"
        android:src="@drawable/ic_reply"
        android:layout_gravity="center" />
</FrameLayout>
