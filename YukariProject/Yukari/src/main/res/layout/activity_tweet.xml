<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TweetActivity">

    <EditText
        android:id="@+id/etTweetInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvTweetCount"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvTweetBy"
        android:gravity="left|top"
        android:inputType="textMultiLine"
        android:maxLines="6"
        android:minLines="2">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnTweet"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/tlTweetAction"
        android:layout_alignRight="@+id/etTweetInput"
        android:layout_below="@+id/etTweetInput"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/tlTweetAction"
        android:text="Tweet" />

    <TextView
        android:id="@+id/tvTweetCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvTweetTitle"
        android:layout_below="@+id/ivProfileHeader"
        android:layout_marginTop="8dp"
        android:text="140"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tvTweetBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ivProfileHeader"
        android:layout_marginTop="8dp"
        android:background="@drawable/selector_key_light_background"
        android:clickable="true"
        android:focusable="true"
        android:gravity="right"
        android:paddingLeft="4dp"
        android:text=">> SELECT ACCOUNT(S)"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/selector_key_light_textcolor" />

    <TableLayout
        android:id="@+id/tlTweetAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etTweetInput"
        android:layout_below="@+id/etTweetInput">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageButton
                android:id="@+id/ibTweetAttachPic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:src="@drawable/ic_content_picture" />

            <ImageButton
                android:id="@+id/ibTweetTakePic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:src="@drawable/ic_access_camera" />

            <ImageButton
                android:id="@+id/ibTweetSetHash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:src="@drawable/ic_hashtag" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageButton
                android:id="@+id/ibTweetGrasses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:src="@drawable/ic_grass" />

            <ImageButton
                android:id="@+id/ibTweetSanten"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_column="1"
                android:src="@drawable/ic_santen" />

            <ImageButton
                android:id="@+id/ibTweetDraft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:src="@drawable/ic_list" />

        </TableRow>

    </TableLayout>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tlTweetAction"
        android:layout_below="@+id/tlTweetAction"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:id="@+id/llTweetExtra"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">

            <ImageButton
                android:id="@+id/ibTweetSNPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_reply_b"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/ibTweetVoiceInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_voice_input" />

            <ImageButton
                android:id="@+id/ibTweetMorseInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_morse" />

            <ImageButton
                android:id="@+id/ibTweetNowPlaying"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_playing_music"
                android:visibility="gone" />

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/tvTweetTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Tweet" />

    <ImageView
        android:id="@+id/ivProfileHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etTweetInput"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvTweetTitle"
        android:scaleType="fitXY"
        android:src="@android:drawable/divider_horizontal_textfield" />

    <LinearLayout
        android:id="@+id/llTweetAttachParent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/horizontalScrollView"
        android:layout_alignRight="@+id/tvTweetBy"
        android:layout_below="@+id/horizontalScrollView"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:text="Attach" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:scaleType="fitXY"
            android:src="@android:drawable/divider_horizontal_textfield" />

        <ImageView
            android:id="@+id/ivTweetImageAttach"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:scaleType="centerInside" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llTweetQuoteParent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/llTweetAttachParent"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:text="Quote" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:scaleType="fitXY"
            android:src="@android:drawable/divider_horizontal_textfield" />

        <TextView
            android:id="@+id/tvTweetQuote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:text="RT \uff20screen_name: Tweet" />

    </LinearLayout>

</RelativeLayout>
