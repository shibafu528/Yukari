<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="shibafu.yukari"
    android:installLocation="auto"
    android:versionCode="1"
    android:versionName="0.07alpha build130810" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="true">
        <activity
            android:name="shibafu.yukari.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppThemeNoTitle" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="shibafu.yukari.activity.OAuthActivity"
            android:label="@string/OAuthTitle"
            android:launchMode="singleTask"
            android:theme="@style/AppBaseTheme" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="twitter"
                    android:scheme="yukari" />
            </intent-filter>
        </activity>

        <service android:name="shibafu.yukari.service.TwitterService" />

        <activity
            android:name="shibafu.yukari.activity.TweetActivity"
            android:label="@string/title_activity_tweet"
            android:theme="@style/VertAnimationTheme">
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="text/*"/>
                <data android:mimeType="image/*"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data android:scheme="http" android:host="twitter.com" android:pathPrefix="/intent/tweet"/>
                <data android:scheme="https" android:host="twitter.com" android:pathPrefix="/intent/tweet"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.StatusActivity"
            android:label="@string/title_activity_status"
            android:theme="@style/AppDialogTheme">
        </activity>

        <activity
            android:name=".activity.StatusIntentActivity"
            android:label="@string/title_activity_status"
            android:theme="@android:style/Theme.NoDisplay">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data android:scheme="http" android:host="twitter.com" android:pathPattern="/.*/status/.*"/>
                <data android:scheme="https" android:host="twitter.com" android:pathPattern="/.*/status/.*"/>
                <data android:scheme="http" android:host="twitter.com" android:pathPattern="/.*/statuses/.*"/>
                <data android:scheme="https" android:host="twitter.com" android:pathPattern="/.*/statuses/.*"/>
            </intent-filter>
        </activity>

        <activity android:name=".activity.AssetExtractActivity"
                  android:label="@string/title_activity_assetextract"
                  android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name=".activity.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppThemeNoTitle"></activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

</manifest>
