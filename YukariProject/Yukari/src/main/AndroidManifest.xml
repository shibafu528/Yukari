<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="shibafu.yukari"
    android:installLocation="auto"
    android:versionCode="1"
    android:versionName="0.30alpha build131216" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="shibafu.yukari.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/YukariTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="shibafu.yukari.activity.OAuthActivity"
            android:label="@string/OAuthTitle"
            android:launchMode="singleTask"
            android:theme="@style/AppBaseTheme" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="twitter"
                    android:scheme="yukari" />
            </intent-filter>
        </activity>

        <service android:name="shibafu.yukari.service.TwitterService" />

        <activity
            android:name="shibafu.yukari.activity.TweetActivity"
            android:label="@string/title_activity_tweet"
            android:theme="@style/VertAnimationTheme" >
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/*" />
                <data android:mimeType="image/*" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="twitter.com"
                    android:pathPrefix="/intent/tweet"
                    android:scheme="http" />
                <data
                    android:host="twitter.com"
                    android:pathPrefix="/intent/tweet"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name="shibafu.yukari.activity.StatusActivity"
            android:label="@string/title_activity_status"
            android:theme="@style/YukariDialogTheme" >
        </activity>
        <activity
            android:name="shibafu.yukari.activity.StatusIntentActivity"
            android:label="@string/title_activity_status"
            android:theme="@android:style/Theme.NoDisplay" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="twitter.com"
                    android:pathPattern="/.*/status/.*"
                    android:scheme="http" />
                <data
                    android:host="twitter.com"
                    android:pathPattern="/.*/status/.*"
                    android:scheme="https" />
                <data
                    android:host="twitter.com"
                    android:pathPattern="/.*/statuses/.*"
                    android:scheme="http" />
                <data
                    android:host="twitter.com"
                    android:pathPattern="/.*/statuses/.*"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name="shibafu.yukari.activity.AssetExtractActivity"
            android:label="@string/title_activity_assetextract"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="shibafu.yukari.activity.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppThemeNoTitle" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:mimeType="vnd.shibafu.yukari/user" />
            </intent-filter>
        </activity>

        <provider
            android:name="shibafu.yukari.provider.LinkProvider"
            android:authorities="shibafu.yukari.link"
            android:exported="false" />

        <!--
        LinkProvider経由でハッシュ検索が呼ばれた時に飛ばす一時ポイント
        検索Activityを実装したらそっちに飛ばして
        -->
        <activity
            android:name="shibafu.yukari.activity.NotFoundStubActivity"
            android:theme="@android:style/Theme.Dialog">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:mimeType="vnd.shibafu.yukari/hash" />
            </intent-filter>
        </activity>

        <activity
            android:name="shibafu.yukari.activity.MorseInputActivity"
            android:icon="@drawable/ic_launcher_morse"
            android:label="@string/title_morse_input"
            android:theme="@style/AppThemeTranslucent" >
            <intent-filter>
                <action android:name="com.adamrocker.android.simeji.ACTION_INTERCEPT" />

                <category android:name="com.adamrocker.android.simeji.REPLACE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.SNPickerActivity"
            android:label="@string/title_activity_snpicker"
            android:theme="@style/YukariDialogTheme">
        </activity>
        <service android:name=".service.FriendsDBUpdateService"/>

        <receiver android:name=".receiver.StubReceiver"/>

        <activity
            android:name=".activity.TraceActivity"
            android:theme="@style/AppThemeNoTitle"
            android:label="Trace" />

        <activity
            android:name=".activity.PreviewActivity"
            android:theme="@style/AppThemeTranslucentBg"/>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>
