<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@android:id/icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Album Name"
        android:id="@android:id/text1"
        android:layout_alignTop="@android:id/icon"
        android:layout_toRightOf="@android:id/icon"
        android:layout_toEndOf="@android:id/icon"
        android:layout_marginLeft="6dp"
        android:layout_alignBottom="@android:id/icon"
        android:layout_toLeftOf="@android:id/text2"
        android:layout_toStartOf="@android:id/text2"
        android:layout_marginRight="4dp"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@android:id/text2"
        android:layout_alignTop="@android:id/text1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@android:id/text1"
        android:gravity="center_vertical" />
</RelativeLayout>